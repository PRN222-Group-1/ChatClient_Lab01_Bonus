<Window x:Class="ChatClient.MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewmodel="clr-namespace:ChatClient.MVVM.ViewModel"
        Title="Chat Client"
        Height="450"
        Width="800">

    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Vùng trái -->
            <ColumnDefinition Width="200"/>
            <!-- Vùng phải -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ================= VÙNG TRÁI ================= -->
        <Border Grid.Column="0"
                Background="#F2F2F2"
                BorderBrush="LightGray"
                BorderThickness="0,0,1,0"
                Padding="10">

            <DockPanel>
                <TextBox Height="25"
                         DockPanel.Dock="Top"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                <Button x:Name="ConnectButton"
                        Height="35"
                        Content="Connect"
                        DockPanel.Dock="Top"
                        Command="{Binding ConnectToServerCommand}"/>
                <ListView ItemsSource="{Binding Users}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Username}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </DockPanel>
        </Border>

        <!-- ================= VÙNG PHẢI ================= -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <!-- Chat history -->
                <RowDefinition Height="*"/>
                <!-- Input -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ===== LỊCH SỬ CHAT ===== -->
            <Border Grid.Row="0"
            Margin="10"
            BorderBrush="#DDD"
            BorderThickness="1"
            CornerRadius="5">

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListBox ItemsSource="{Binding Messages}"
                     FontFamily="Segoe UI Emoji"
                     FontSize="14"/>
                </ScrollViewer>

            </Border>

            <!-- ===== INPUT + EMOJI + SEND ===== -->
            <Border Grid.Row="1"
            BorderBrush="LightGray"
            BorderThickness="1,0,0,0"
            Padding="10">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Input -->
                    <TextBox x:Name="InputBox"
                     Grid.Column="0"
                     Height="40"
                     Padding="10"
                     VerticalContentAlignment="Center"
                     FontFamily="Segoe UI Emoji"
                     Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="False"/>

                    <!-- Emoji button -->
                    <Button Grid.Column="1"
                    Content="😊"
                    FontSize="20"
                    Width="40"
                    Command="{Binding ToggleEmojiPanelCommand}"/>       


                    <!-- Send -->
                    <Button Grid.Column="2"
                    IsDefault="True"
                    Margin="10,0,0,0"
                    Padding="20,6"
                    Background="#0144DB"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="16"
                    BorderThickness="0"
                    Cursor="Hand"
                    Command="{Binding SendMessageCommand}">
                        Gửi
                    </Button>

                    <!-- ===== EMOJI POPUP ===== -->
                    <Popup IsOpen="{Binding IsEmojiOpen}"
                           Placement="Top"
                           PlacementTarget="{Binding ElementName=InputBox}"
                           StaysOpen="False">

                        <Border Background="White"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            Width="300"
                            Height="250">

                            <ScrollViewer>
                                <ItemsControl ItemsSource="{Binding Emojis}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding Emoji}"
                                            FontSize="20"
                                            Width="40"
                                            Height="40"
                                            Command="{Binding DataContext.InsertEmojisCommand,
                                                      RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                        </Border>
                    </Popup>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
